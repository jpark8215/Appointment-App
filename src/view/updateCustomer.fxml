    <children>
        <Button fx:id="cancelButton" layoutX="729.0" layoutY="354.0" mnemonicParsing="false" onAction="#cancelButtonHandler" text="Cancel" />
        <Label layoutX="14.0" layoutY="16.0" text="Update Customer">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="customerIdField" disable="true" editable="false" layoutX="125.0" layoutY="55.0" prefHeight="25.0" prefWidth="150.0" />
        <TextField fx:id="nameField" layoutX="125.0" layoutY="95.0" prefHeight="25.0" prefWidth="150.0" promptText="Name Required" />
        <TextField fx:id="addressField" layoutX="125.0" layoutY="135.0" prefHeight="25.0" prefWidth="150.0" promptText="Address Required" />
        <TextField fx:id="phoneField" layoutX="125.0" layoutY="295.0" prefHeight="25.0" prefWidth="150.0" promptText="Phone Required" />
        <Label layoutX="25.0" layoutY="55.0" prefHeight="25.0" text="Customer ID" />
        <Label layoutX="25.0" layoutY="95.0" prefHeight="25.0" text="Name" />
        <Label layoutX="25.0" layoutY="135.0" prefHeight="25.0" text="Address" />
        <Label layoutX="25.0" layoutY="215.0" prefHeight="25.0" text="Country" />
        <Label layoutX="25.0" layoutY="295.0" prefHeight="25.0" text="Phone" />
        <Button fx:id="saveButton" layoutX="673.0" layoutY="354.0" mnemonicParsing="false" onAction="#saveButtonHandler" text="Save" />
