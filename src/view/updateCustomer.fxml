      <ComboBox fx:id="divisionComboBox" layoutX="125.0" layoutY="255.0" prefWidth="150.0" />
      <Label layoutX="25.0" layoutY="255.0" prefHeight="25.0" text="Division" />
      <ComboBox fx:id="countryComboBox" layoutX="125.0" layoutY="215.0" onAction="#userCountryChoice" prefWidth="150.0" />
