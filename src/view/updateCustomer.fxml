        <Label layoutX="25.0" layoutY="175.0" prefHeight="25.0" text="Zip Code" />
        <Label layoutX="305.0" layoutY="20.0" text="Customer's Appointments">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="associatedAppointmentTable" layoutX="305.0" layoutY="55.0" prefHeight="250.0" prefWidth="480.0">
            <columns>
                <TableColumn fx:id="appointmentIDColumn" prefWidth="65.0" text="Appt ID" />
                <TableColumn fx:id="titleColumn" prefWidth="70.0" text="Title" />
                <TableColumn fx:id="typeColumn" prefWidth="110.0" text="Type" />
                <TableColumn fx:id="startDateColumn" prefWidth="120.0" text="Start Date" />
                <TableColumn fx:id="endDateColumn" prefWidth="120.0" text="End Date" />
            </columns>
        </TableView>
        <Button layoutX="306.0" layoutY="320.0" mnemonicParsing="false" onAction="#UpdateAppointmentHandler" prefWidth="135.0" text="Update Appointment" />
        <Button layoutX="306.0" layoutY="354.0" mnemonicParsing="false" onAction="#DeleteAppointmentHandler" prefWidth="135.0" text="Delete Appointment" />
        <Label fx:id="timeZoneLabel" layoutX="663.0" layoutY="16.0" prefHeight="25.0" text="Your timezone: UTC" textFill="#0558dd">
         <font>
            <Font size="14.0" />
         </font></Label>
