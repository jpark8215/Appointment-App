        <Label layoutX="120.0" layoutY="315.0" text="Start Time" />
        <Label layoutX="120.0" layoutY="345.0" text="End Time" />
        <Button fx:id="cancelButton" layoutX="515.0" layoutY="429.0" mnemonicParsing="false" onAction="#CancelHandler" text="Cancel" />
