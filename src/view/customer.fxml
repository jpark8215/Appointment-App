<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerController">

    <children>
        <Button fx:id="returnButton" layoutX="867.0" layoutY="348.0" mnemonicParsing="false" onAction="#returnButtonHandler" text="Return" />
        <TableView fx:id="customerTable" layoutX="19.0" layoutY="80.0" prefHeight="244.0" prefWidth="900.0">
            <columns>
                <TableColumn fx:id="customerIdCol" text="Customer ID" />
                <TableColumn fx:id="customerNameCol" prefWidth="140.0" text="Name" />
                <TableColumn fx:id="customerAddressCol" prefWidth="160.0" text="Address" />
                <TableColumn fx:id="customerPostalCodeCol" prefWidth="110.0" text="Zip Code" />
                <TableColumn fx:id="customerDivisionCol" prefWidth="130.0" text="Division" />
                <TableColumn fx:id="customerCountryCol" prefWidth="110.0" text="Country" />
                <TableColumn fx:id="customerPhoneCol" prefWidth="170.0" text="Phone" />
            </columns>
        </TableView>
        <Button layoutX="19.0" layoutY="348.0" mnemonicParsing="false" onAction="#addCustomerHandler" text="Add Customer" />
        <Button layoutX="19.0" layoutY="26.0" mnemonicParsing="false" onAction="#updateCustomerHandler" text="Update Customer - Appointment" />
        <Button layoutX="131.0" layoutY="348.0" mnemonicParsing="false" onAction="#deleteCustomerHandler" text="Delete Customer" />
        <Button layoutX="807.0" layoutY="26.0" mnemonicParsing="false" onAction="#addAppointmentHandler" text="Add Appointment" />
    </children>

</AnchorPane>
