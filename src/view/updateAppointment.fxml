        <DatePicker fx:id="endDateField" layoutX="250.0" layoutY="340.0" prefHeight="25.0" prefWidth="150.0" />
        <ComboBox fx:id="startHourCombo" layoutX="420.0" layoutY="310.0" prefHeight="25.0" prefWidth="60.0" promptText="Hr" />
        <ComboBox fx:id="startMinuteCombo" layoutX="490.0" layoutY="310.0" prefHeight="25.0" prefWidth="60.0" promptText="Mn" />
        <ComboBox fx:id="endHourCombo" layoutX="420.0" layoutY="340.0" prefHeight="25.0" prefWidth="60.0" promptText="Hr" />
        <ComboBox fx:id="endMinuteCombo" layoutX="490.0" layoutY="340.0" prefHeight="25.0" prefWidth="60.0" promptText="Mn" />
        <Label layoutX="430.0" layoutY="380.0" text="24-hour format" textFill="RED" />
      <TextField fx:id="userIdField" layoutX="250.0" layoutY="100.0" prefHeight="25.0" prefWidth="150.0" promptText="Auto Generated" />
      <Label layoutX="120.0" layoutY="100.0" text="User ID" />
      <ComboBox fx:id="contactComboBox" layoutX="250.0" layoutY="250.0" prefHeight="25.0" prefWidth="150.0" promptText="Contact" />
      <Label layoutX="120.0" layoutY="250.0" text="Contact" />
      <Label layoutX="120.0" layoutY="220.0" text="Location" />
      <TextField fx:id="locationField" layoutX="250.0" layoutY="220.0" prefHeight="25.0" prefWidth="150.0" promptText="Location" />
      <Label layoutX="120.0" layoutY="190.0" text="Description" />
      <TextField fx:id="descriptionField" layoutX="250.0" layoutY="190.0" prefHeight="25.0" prefWidth="150.0" promptText="Description" />
