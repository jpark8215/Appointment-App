                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="120.0" layoutY="70.0" text="Appointment ID" />
        <Label layoutX="120.0" layoutY="130.0" text="Customer ID" />
        <Label layoutX="120.0" layoutY="160.0" text="Title" />
        <Label layoutX="120.0" layoutY="280.0" text="Type" />
        <Label layoutX="120.0" layoutY="310.0" text="Start Time" />
        <Label layoutX="120.0" layoutY="340.0" text="End Time" />
        <Button fx:id="cancelButton" layoutX="512.0" layoutY="444.0" mnemonicParsing="false" onAction="#CancelHandler" text="Cancel" />
        <Button fx:id="saveButton" layoutX="446.0" layoutY="444.0" mnemonicParsing="false" onAction="#SaveHandler" text="Save" />
        <TextField fx:id="appointmentIdField" disable="true" layoutX="250.0" layoutY="70.0" prefHeight="25.0" prefWidth="150.0" promptText="Auto Generated" />
        <ComboBox fx:id="customerComboBox" layoutX="250.0" layoutY="130.0" prefHeight="25.0" prefWidth="150.0" promptText="Customer" />
        <TextField fx:id="titleField" layoutX="250.0" layoutY="160.0" prefHeight="25.0" prefWidth="150.0" promptText="Appointment Title" />
        <TextField fx:id="typeField" layoutX="250.0" layoutY="280.0" prefHeight="25.0" prefWidth="150.0" promptText="Appointment Type" />
