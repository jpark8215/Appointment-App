<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateAppointmentController">

    <children>
        <Label layoutX="25.0" layoutY="14.0" text="Update Appointment">
